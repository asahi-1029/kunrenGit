        $("#iframeDownload").attr("src", url);

        checker = setInterval(function () {
          var cookie = $.cookie("fileDownloaded");
          if (typeof $.cookie("fileDownloaded") !== "undefined") {
            HideLoading();
            if (cookie != "fileDownloaded=true") {
