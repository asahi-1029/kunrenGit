            $('#txt現ページ').val(1);
            $('#btn次ページ').attr("src","/Images/right_triangle.png");
             
            $.ajax({
                url: "/UserManagement/Sort",
                type: "post",
                data: JSON.stringify({ colName: colName, sortOrder: order }),
                contentType: 'application/json',
                success: function (data){
